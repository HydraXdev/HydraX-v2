# BITTEN Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Telegram Bot Tokens
BOT_TOKEN=your_main_trading_bot_token_here
VOICE_BOT_TOKEN=your_voice_personality_bot_token_here

# Flask Application
FLASK_SECRET_KEY=your_flask_secret_key_here
FLASK_ENV=production
FLASK_DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///data/bitten_production.db
REDIS_URL=redis://localhost:6379/0

# MT5 Configuration (for Press Pass demo accounts)
MT5_LOGIN=your_mt5_login_here
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=your_mt5_server_here
MT5_BROKER=your_broker_name_here
MT5_PATH=/opt/mt5/terminal64.exe

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# API Keys and External Services
NEWS_API_KEY=your_news_api_key_here
FOREX_API_KEY=your_forex_data_api_key_here

# Security Settings
RATE_LIMIT_STORAGE=redis
RATE_LIMIT_FALLBACK=file
SESSION_TIMEOUT=3600

# Press Pass Configuration
PRESS_PASS_EXPIRES_HOURS=168
PRESS_PASS_AUTO_CLEANUP=true

# WebApp Configuration
WEBAPP_PORT=8888
WEBAPP_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/root/HydraX-v2/logs/production.log

# Bridge Configuration (if using containerized MT5)
BRIDGE_PORT=9013
BRIDGE_HOST=0.0.0.0