                soundToggleBtn.textContent = soundEnabled ? 'üîä' : 'üîá';
                soundToggleBtn.classList.toggle('active', soundEnabled);
            }}
            
            function toggleSound() {{
                soundEnabled = !soundEnabled;
                localStorage.setItem('soundEnabled', soundEnabled);
                updateSoundButton();
                if (soundEnabled) {{
                    playSound('toggle');
                }}
