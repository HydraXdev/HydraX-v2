            function shareToFacebook() {{
                const text = `I'm {callsign} in BITTEN Trading! üéñÔ∏è Win Rate: {win_rate:.1%} | P&L: {'+'if total_pnl > 0 else ''}${total_pnl:,.0f} | Join my squad!`;
