[Unit]
Description=BITTEN Bridge Troll Agent (HydraX)
After=network.target

[Service]
ExecStart=/usr/bin/python3 /root/HydraX-v2/bridge_fortress_daemon.py
Restart=always
RestartSec=3
User=root
WorkingDirectory=/root/HydraX-v2/
StandardOutput=append:/var/log/bridge_troll.log
StandardError=append:/var/log/bridge_troll.err
Environment=PYTHONPATH=/root/HydraX-v2
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target