    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.0/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        // Initialize Socket.IO
        const socket = io();
        
        // Update current time
        function updateTime() {
            const now = new Date();
            document.getElementById('currentTime').textContent = now.toLocaleTimeString() + ' UTC';
        }
        setInterval(updateTime, 1000);
        updateTime();
        
        // Load initial data
        async function loadMissionStats() {
            try {
                const response = await fetch('/throne/api/mission_stats');
                const data = await response.json();
                
                document.getElementById('activeUsers').textContent = data.active_users;
                document.getElementById('tradesToday').textContent = data.trades_today;
                document.getElementById('winRate').textContent = data.win_rate + '%';
                document.getElementById('totalXP').textContent = data.total_xp_awarded.toLocaleString();
                document.getElementById('missionCount').textContent = data.mission_count;
                
                const bridgeStatus = document.getElementById('bridgeStatus');
                const statusClass = data.bridge_status === 'ONLINE' ? 'status-online' : 'status-offline';
                bridgeStatus.innerHTML = `<span class="status-indicator ${statusClass}"></span>${data.bridge_status}`;
            } catch (error) {
                console.error('Error loading mission stats:', error);
            }
        }
        
        async function loadSoldierRoster() {
            try {
                const response = await fetch('/throne/api/soldier_roster');
                const data = await response.json();
                
                const tbody = document.getElementById('soldierTableBody');
                tbody.innerHTML = '';
                
                data.soldiers.forEach(soldier => {
                    const row = tbody.insertRow();
                    row.innerHTML = `
                        <td>${soldier.username}</td>
                        <td>${soldier.tier}</td>
                        <td>${soldier.xp.toLocaleString()}</td>
                        <td>${soldier.telegram_linked ? '‚úÖ' : '‚ùå'}</td>
                        <td>${soldier.last_seen}</td>
                        <td>${soldier.trade_count}</td>
                    `;
                });
            } catch (error) {
                console.error('Error loading soldier roster:', error);
            }
        }
        
        async function loadTradeLog() {
            try {
                const response = await fetch('/throne/api/trade_log');
                const data = await response.json();
                
                const container = document.getElementById('tradeLogBody');
                container.innerHTML = '';
                
                data.trades.forEach(trade => {
                    const row = document.createElement('div');
                    row.className = `trade-row ${trade.result.toLowerCase()}`;
                    row.innerHTML = `
                        <div>${trade.time}</div>
                        <div>${trade.user}</div>
                        <div>${trade.pair}</div>
                        <div>${trade.direction}</div>
                        <div>${trade.result}</div>
                        <div>${trade.pips}</div>
                        <div>${trade.xp_earned}</div>
                    `;
                    container.appendChild(row);
                });
            } catch (error) {
                console.error('Error loading trade log:', error);
            }
        }
        
        async function executeCommand(command, parameters = {}) {
            try {
                const response = await fetch('/throne/api/command', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ command, parameters })
                });
                
                const result = await response.json();
                alert(result.message);
                
                if (result.success) {
                    loadMissionStats(); // Refresh stats
                }
            } catch (error) {
                alert('Command execution failed: ' + error.message);
            }
        }
        
        function awardXP() {
            const userId = document.getElementById('xpUserId').value;
            const amount = parseInt(document.getElementById('xpAmount').value);
            
            if (!userId || !amount) {
                alert('Please enter both User ID and XP Amount');
                return;
            }
            
            executeCommand('award_xp', { user_id: userId, amount: amount });
            
            // Clear inputs
            document.getElementById('xpUserId').value = '';
            document.getElementById('xpAmount').value = '';
        }
        
        async function showSitrep() {
            document.getElementById('sitrepModal').style.display = 'block';
            
            try {
                const response = await fetch('/throne/api/sitrep');
                const data = await response.json();
                
                const content = document.getElementById('sitrepContent');
                content.innerHTML = `
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div>
                            <h3>üìä System Metrics</h3>
                            <p><strong>XP Flow (24h):</strong> ${data.sitrep.xp_flow_24h.toLocaleString()}</p>
                            <p><strong>Signal Volume:</strong> ${data.sitrep.signal_fire_volume}</p>
                            <p><strong>Bridge Response:</strong> ${data.sitrep.bridge_response_time}</p>
                            <p><strong>Win Rate Trend:</strong> ${data.sitrep.win_rate_trend}</p>
                        </div>
                        <div>
                            <h3>üë• User Activity</h3>
                            <p><strong>Manual Mode:</strong> ${data.sitrep.active_users_by_mode.MANUAL}</p>
                            <p><strong>Semi-Auto:</strong> ${data.sitrep.active_users_by_mode.SEMI_AUTO}</p>
                            <p><strong>Full Auto:</strong> ${data.sitrep.active_users_by_mode.FULL_AUTO}</p>
                            <p><strong>Press Pass Conv:</strong> ${data.sitrep.press_pass_conversion}</p>
                        </div>
                    </div>
                    <div style="margin-top: 20px;">
                        <h3>üèÜ Intelligence</h3>
                        <p><strong>Top Performer:</strong> ${data.sitrep.most_profitable_user}</p>
                        <p><strong>Badge Velocity:</strong> ${data.sitrep.badge_unlock_velocity}</p>
                        <p><strong>Overdue Links:</strong> ${data.sitrep.overdue_telegram_links}</p>
                        <p><strong>Referral Ratio:</strong> ${data.sitrep.referrals_vs_enlistments}</p>
                    </div>
                `;
            } catch (error) {
                document.getElementById('sitrepContent').innerHTML = 'Error loading SITREP: ' + error.message;
            }
        }
        
        function closeSitrep() {
            document.getElementById('sitrepModal').style.display = 'none';
        }
        
        async function exportSitrep() {
            try {
                // Get fresh SITREP data
                const response = await fetch('/throne/api/sitrep');
                const data = await response.json();
                
                if (!data.sitrep) {
                    alert('Failed to generate SITREP data');
                    return;
                }
                
                // Initialize jsPDF
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                
                // Generate timestamp for filename
                const now = new Date();
                const timestamp = now.toISOString().split('T')[0]; // YYYY-MM-DD format
                const timeUTC = now.toTimeString().split(' ')[0]; // HH:MM:SS format
                
                // Page setup
                const pageWidth = doc.internal.pageSize.getWidth();
                const pageHeight = doc.internal.pageSize.getHeight();
                const margin = 20;
                let yPosition = margin;
                
                // Header with BITTEN branding
                doc.setFont('helvetica', 'bold');
                doc.setFontSize(24);
                doc.setTextColor(40, 40, 40);
                doc.text('üèÜ BITTEN COMMANDER REPORT', pageWidth / 2, yPosition, { align: 'center' });
                
                yPosition += 15;
                doc.setFontSize(14);
                doc.setFont('helvetica', 'normal');
                doc.setTextColor(80, 80, 80);
                doc.text(`SITUATIONAL REPORT - ${timestamp}`, pageWidth / 2, yPosition, { align: 'center' });
                
                yPosition += 20;
                
                // Horizontal line
                doc.setDrawColor(200, 200, 200);
                doc.line(margin, yPosition, pageWidth - margin, yPosition);
                yPosition += 15;
                
                // System Metrics Section
                doc.setFont('helvetica', 'bold');
                doc.setFontSize(16);
                doc.setTextColor(40, 40, 40);
                doc.text('üìä SYSTEM METRICS', margin, yPosition);
                yPosition += 10;
                
                doc.setFont('helvetica', 'normal');
                doc.setFontSize(11);
                doc.setTextColor(60, 60, 60);
                
                const metrics = [
                    `XP Flow (24h): ${data.sitrep.xp_flow_24h.toLocaleString()}`,
                    `Signal Fire Volume: ${data.sitrep.signal_fire_volume}`,
                    `Bridge Response Time: ${data.sitrep.bridge_response_time}`,
                    `Win Rate Trend: ${data.sitrep.win_rate_trend}`
                ];
                
                metrics.forEach(metric => {
                    doc.text(`‚Ä¢ ${metric}`, margin + 5, yPosition);
                    yPosition += 6;
                });
                
                yPosition += 10;
                
                // User Activity Section
                doc.setFont('helvetica', 'bold');
                doc.setFontSize(16);
                doc.setTextColor(40, 40, 40);
                doc.text('üë• USER ACTIVITY', margin, yPosition);
                yPosition += 10;
                
                doc.setFont('helvetica', 'normal');
                doc.setFontSize(11);
                doc.setTextColor(60, 60, 60);
                
                const userActivity = [
                    `Manual Mode Users: ${data.sitrep.active_users_by_mode.MANUAL}`,
                    `Semi-Auto Mode Users: ${data.sitrep.active_users_by_mode.SEMI_AUTO}`,
                    `Full Auto Mode Users: ${data.sitrep.active_users_by_mode.FULL_AUTO}`,
                    `Press Pass Conversion: ${data.sitrep.press_pass_conversion}`
                ];
                
                userActivity.forEach(activity => {
                    doc.text(`‚Ä¢ ${activity}`, margin + 5, yPosition);
                    yPosition += 6;
                });
                
                yPosition += 10;
                
                // Intelligence Section
                doc.setFont('helvetica', 'bold');
                doc.setFontSize(16);
                doc.setTextColor(40, 40, 40);
                doc.text('üèÜ INTELLIGENCE', margin, yPosition);
                yPosition += 10;
                
                doc.setFont('helvetica', 'normal');
                doc.setFontSize(11);
                doc.setTextColor(60, 60, 60);
                
                const intelligence = [
                    `Top Performer: ${data.sitrep.most_profitable_user}`,
                    `Badge Unlock Velocity: ${data.sitrep.badge_unlock_velocity}`,
                    `Overdue Telegram Links: ${data.sitrep.overdue_telegram_links}`,
                    `Referral vs Enlistments: ${data.sitrep.referrals_vs_enlistments}`
                ];
                
                intelligence.forEach(intel => {
                    doc.text(`‚Ä¢ ${intel}`, margin + 5, yPosition);
                    yPosition += 6;
                });
                
                // Footer
                const footerY = pageHeight - 20;
                doc.setDrawColor(200, 200, 200);
                doc.line(margin, footerY - 5, pageWidth - margin, footerY - 5);
                
                doc.setFont('helvetica', 'italic');
                doc.setFontSize(9);
                doc.setTextColor(120, 120, 120);
                doc.text(`Generated by BITTEN Commander Throne at ${timeUTC} UTC`, pageWidth / 2, footerY, { align: 'center' });
                
                // Classification marking
                doc.setFont('helvetica', 'bold');
                doc.setFontSize(8);
                doc.setTextColor(200, 0, 0);
                doc.text('COMMANDER EYES ONLY', pageWidth / 2, footerY + 8, { align: 'center' });
                
                // Save the PDF
                const filename = `SITREP_${timestamp}.pdf`;
                doc.save(filename);
                
                // Success notification
                setTimeout(() => {
                    alert(`‚úÖ SITREP exported successfully as ${filename}`);
                }, 500);
                
            } catch (error) {
                console.error('Error exporting SITREP:', error);
                alert('‚ùå Failed to export SITREP: ' + error.message);
            }
        }
        
        // Socket.IO event handlers
        socket.on('live_update', function(data) {
            // Update live data without full page refresh
            document.getElementById('activeUsers').textContent = data.active_users;
            document.getElementById('tradesToday').textContent = data.trades_today;
            document.getElementById('winRate').textContent = data.win_rate + '%';
        });
        
        // Load initial data
        loadMissionStats();
        loadSoldierRoster();
        loadTradeLog();
        
        // Refresh data every 30 seconds
        setInterval(() => {
            loadMissionStats();
            loadTradeLog();
        }, 30000);
        
        // Refresh soldier roster every 2 minutes
        setInterval(loadSoldierRoster, 120000);
    </script>
</body>
</html>