    <!-- SITREP Modal -->
    <div class="sitrep-modal" id="sitrepModal">
        <div class="sitrep-content">
            <button class="close-btn" onclick="closeSitrep()">√ó</button>
            <div class="panel-title">üìã SITUATIONAL REPORT</div>
            <div id="sitrepContent">Loading SITREP...</div>
            <button class="command-btn" onclick="exportSitrep()" style="margin-top: 20px;">Export as PDF</button>
        </div>
