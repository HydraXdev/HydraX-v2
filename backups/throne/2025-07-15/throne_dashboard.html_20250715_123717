    <div class="throne-header">
        <div class="throne-title">üèÜ BITTEN COMMANDER THRONE</div>
        <div class="commander-info">
            <div><strong>{{ commander_id }}</strong></div>
            <div>Access Level: <span style="color: #ff6b00;">{{ access_level }}</span></div>
            <div id="currentTime"></div>
        </div>
    </div>
    
    <div class="dashboard-grid">
        <!-- Mission Table -->
        <div class="dashboard-panel">
            <div class="panel-title">üõ∞Ô∏è MISSION TABLE</div>
            <div class="mission-stats live-update" id="missionStats">
                <div class="stat-item">
                    <span>Active Users:</span>
                    <span class="stat-value" id="activeUsers">--</span>
                </div>
                <div class="stat-item">
                    <span>Trades Today:</span>
                    <span class="stat-value" id="tradesToday">--</span>
                </div>
                <div class="stat-item">
                    <span>Win Rate:</span>
                    <span class="stat-value" id="winRate">--</span>
                </div>
                <div class="stat-item">
                    <span>Total XP:</span>
                    <span class="stat-value" id="totalXP">--</span>
                </div>
                <div class="stat-item">
