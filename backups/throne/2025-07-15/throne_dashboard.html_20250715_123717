        <!-- Command Panel -->
        <div class="dashboard-panel">
            <div class="panel-title">üéÆ COMMAND PANEL</div>
            <div class="command-grid">
                <button class="command-btn" onclick="executeCommand('toggle_stealth')">Stealth Mode</button>
                <button class="command-btn" onclick="executeCommand('global_alert')">Global Alert</button>
                <button class="command-btn" onclick="executeCommand('double_xp_event')">Double XP</button>
                <button class="command-btn" onclick="executeCommand('reset_cooldowns')">Reset Cooldowns</button>
                <button class="command-btn danger" onclick="executeCommand('halt_trades')">Halt Trades</button>
                <button class="command-btn" onclick="showSitrep()">SITREP</button>
            </div>
        </div>
        
        <!-- XP Console -->
        <div class="dashboard-panel">
            <div class="panel-title">üß† XP CONSOLE</div>
            <div>
                <input type="text" id="xpUserId" placeholder="User ID" style="width: 100%; margin-bottom: 10px; padding: 8px; background: rgba(0,0,0,0.7); border: 1px solid #00ff41; color: #00ff41;">
                <input type="number" id="xpAmount" placeholder="XP Amount" style="width: 100%; margin-bottom: 10px; padding: 8px; background: rgba(0,0,0,0.7); border: 1px solid #00ff41; color: #00ff41;">
                <button class="command-btn" onclick="awardXP()" style="width: 100%;">Award XP</button>
            </div>
        </div>
        
        <!-- Soldier Roster -->
        <div class="dashboard-panel two-thirds">
            <div class="panel-title">ü™ñ SOLDIER ROSTER</div>
